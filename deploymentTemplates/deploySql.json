{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sqlServerName": {
      "type": "string",
      "metadata": {
        "description": "The name of the SQL Server"
      }
    },
    "sqlDatabaseName": {
      "type": "string",
      "defaultValue": "MyDb",
      "metadata": {
        "description": "The name of the SQL Server database to create"
      }
    },
    "sqlAdministratorLogin": {
      "type": "string",
      "defaultValue": "MyDbAdmin",
      "metadata": {
        "description": "The admin user of the SQL Server"
      }
    },
    "sqlAdministratorLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password of the admin user of the SQL Server"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
    "sqlTemplateUrl": ""
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "name": "DeploySQLResources",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('sqlTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "sqlServerName": {
            "value": "[parameters('sqlServerName')]"
          },
          "sqlDatabaseName": {
            "value": "[parameters('sqlDatabaseName')]"
          },
          "sqlAdministratorLogin": {
            "value": "[parameters('sqlAdministratorLogin')]"
          },
          "sqlAdministratorLoginPassword": {
            "value": "[parameters('sqlAdministratorLoginPassword')]"
          }
        }
      }
    }
  ],

  "outputs": {
    "sqlServer": {
      "type": "object",
      "value": "[reference('DeploySQLResources').outputs.sqlServer.value]"
    },
    "sqlDatabase": {
      "type": "object",
      "value": "[reference('DeploySQLResources').outputs.sqlDatabase.value]"
    }
  }
}
